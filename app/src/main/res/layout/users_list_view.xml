<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="10sp"
    android:paddingEnd="10sp"
    tools:ignore="UselessParent">

    <ImageView
        android:id="@+id/small_circle_color"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:contentDescription="@string/color_of_user"
        android:padding="10sp"
        android:src="@drawable/circle_color_display" />


    <TextView
        android:id="@+id/name_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/small_circle_color"
        android:gravity="center_vertical"
        android:paddingTop="5sp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded"
        tools:text="Name of the User" />

    <TextView
        android:id="@+id/time_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:ignore="RelativeOverlap,RtlHardcoded"
        tools:text="Time: 2m 56s" />

</RelativeLayout>